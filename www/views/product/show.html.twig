    <p>Nom du fournisseur : <a href="{{ urlSupplier }}" class="text-warning">{{ supplier.social }}</a></p>
</div>

{% if addProduct %}
    <div class="container">
    {% if addProduct is same as('ok') %}
    <form action="" method="post">
        <input type="hidden" name="product_id" value="{{ product.id }}">
        <button type="submit" class="btn btn-warning">Ajouter le produit à votre entrepôt</button>
    </form>
    {% else %}
    <p class="text-warning">Produit déjà ajouté à votre entrepôt !</p>        
    {% endif %}
    </div>
{% endif %}


