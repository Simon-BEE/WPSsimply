{% extends '/layout/default.twig' %}

{% block title %}Produit : {{ product.name }}{% endblock %}

{% block body %}
<div class="container mb-5 mt-3">
    <div class="row">
        <div class="col-md-8 col-12">
            <h2 class="display-5 text-center">{{ product.name }}</h2>
        </div>
        {% if mine %}
        <div class="col-md-2 col-6">
            <a href="{{ product.url }}/edit" class="btn btn-danger">editer</a>
        </div>
        <div class="col-md-2 col-6">
            <a href="#" class="btn btn-danger" onclick="deleting('product', {{product.id}})">SUPPRIMER</a>
        </div>
        {% endif %}
    </div>
    <small>Palette de {{ product.volume }} m3</small>
