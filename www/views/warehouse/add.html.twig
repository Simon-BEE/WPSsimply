{% extends '/layout/default.twig' %}

{% block title %}Ajouter votre entrepôt{% endblock %}

{% block body %}
<div class="container mb-5 mt-3">
    <h2 class="display-5 text-center">Ajouter votre entrepôt</h2>
</div>
<div class="container">
    <form method="POST" action="" class="form-group">
            <div class="form-row mb-5">
                <label for="name">Nom de votre entrepôt</label>
                <input type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Entrez le nom de votre entrepôt">
            </div>

            <div class="form-row mb-5">
                <label for="address">Adresse de votre entrepôt</label>
                <input type="text" name="address" class="form-control" id="address" aria-describedby="address" placeholder="Entrez l'adresse">
            </div>

            <div class="form-row mb-5">
                <label for="city_id">Dans quelle ville se trouve votre entrepôt?</label>
                <select name="city_id" id="city_id" class="custom-select">
                    <option selected="">Sélectionnez votre ville</option>
                    {% for city in cities %}
                    <option value="{{ city.id }}">{{ city.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-row mb-5">
                <label for="surface">De quelle taille est votre entrepôt?</label>
                <input type="number" name="surface" class="form-control" id="surface" aria-describedby="surface" placeholder="Rentrer la superficie">
                <small>En mettre carré (m2)</small>
            </div>

            <div class="form-row mb-5">
                <button type="submit" class="btn btn-warning">Sauvegarder votre entrepôt</button>
            </div>
    </form>
</div>

{% endblock %}