{% extends '/layout/default.twig' %}

{% block title %}Messages avec {{ user }}{% endblock %}

{% block body %}

    <div class="container">
    {% for message in messages %}
        <p>{{ message.message | nl2br }}</p>
    {% endfor %}
    </div>

    <div class="container">
        <h2 class="display-5 mb-4">RÃ©pondez au message</h2>
